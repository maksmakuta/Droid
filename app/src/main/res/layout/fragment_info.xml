<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/info_header"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_margin="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_header"
        android:layout_width="0dp"
        android:id="@+id/view_card"
        app:cardCornerRadius="8dp"
        app:strokeColor="?colorPrimary"
        app:strokeWidth="2dp"
        android:elevation="5dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view_center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="2dp"
                android:background="?colorPrimary"
                android:layout_height="0dp"/>

            <View
                android:id="@+id/view_center_h"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:background="?colorPrimary"
                android:layout_height="2dp"/>

            <TextView
                android:id="@+id/view_date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_center"
                app:layout_constraintBottom_toTopOf="@id/view_center_h"
                android:layout_margin="8dp"
                android:text="@string/released"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/view_api"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_center_h"
                app:layout_constraintEnd_toStartOf="@id/view_center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"
                android:text="@string/api"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/info_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view_center"
                app:layout_constraintBottom_toTopOf="@id/view_center_h"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/info_api"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_center_h"
                app:layout_constraintStart_toEndOf="@id/view_center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/view_log"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/changelog"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/view_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_log"
        app:layout_constraintBottom_toTopOf="@id/ad_info"
        android:layout_margin="8dp"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/info_log"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-6587896317641494/2943045612"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>